@model bancknet.Models.Mywallet

<form method="post" asp-action="Creat">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Adicionar movimentação</h2>

        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Date"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Date" class="form-control" type="date"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Describ"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Describ" class="form-control" type="text"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Value"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Value" class="form-control" type="number" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-100" value="Creat" />
                    </div>
                    <div class="col">
                        <a asp-action="index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt">Back</i></a>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-4">
            @*keep this empty*@
        </div>
    </div>
</form>
