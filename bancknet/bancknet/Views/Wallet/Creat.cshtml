@model bancknet.Models.Mywallet

    <div class="d-flex justify-content-center">
        <form method="post" asp-action="Creat">
            <div class="d-flex justify-content-center p-2">
                <div class="form-group row">
                    <h2 class="text-info pl-3">Adicionar movimentação</h2>

                </div>
            </div>
            <div class="row">
                <div class="col-20">
                    <div class="form-group row no-gutters">
                        <div class="col-4 px-1">
                            <label asp-for="Date"></label>
                        </div>
                        <div class="col-8 px-1">
                            <input asp-for="Date" class="form-control" type="date" />
                        </div>
                    </div>
                    <div class="form-group row no-gutters">
                        <div class="col-4 px-1">
                            <label asp-for="Describ"></label>
                        </div>
                        <div class="col-8 px-1">
                            <input asp-for="Describ" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="form-group row no-gutters">
                        <div class="col-4 px-1">
                            <label asp-for="Value"></label>
                        </div>
                        <div class="col-8 px-1">
                            <input asp-for="Value" class="form-control" type="number" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-20 offset-4 row no-gutters">
                            <div class="col px-1">
                                <input type="submit" class="btn btn-info w-100" value="Adicionar" />
                            </div>
                            <div class="col px-1">
                                <a asp-action="index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt">Voltar</i></a>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-4">
                    @*keep this empty*@
                </div>
            </div>
        </form>
    </div>