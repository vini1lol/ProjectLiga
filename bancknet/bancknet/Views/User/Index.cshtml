
@model IEnumerable<bancknet.Models.User>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="User" asp-action="Creat" class="btn btn-primary">
                Create New User
            </a>
            <a asp-controller="User" asp-action="Logout" class="btn btn-primary">
                Logout
            </a>
        </div>
    </div>

    <br /><br />

    @if(Model.Count()>0)
    {
          <table class="table table-bordered table-striped" style="width:100%">
              <thead>
                  <tr>
                      <th>
                          Name
                      </th>
                      <th>
                          Email
                      </th>
                      <th>
                          Password
                      </th>
                      <th></th>
                  </tr>

              </thead>
              <tbody>
                  @foreach(var obj in Model)
                  {
                  <tr>
                      <td width="50%">@obj.name</td>
                      <td width="50%">@obj.email</td>
                      <td width="50%">@obj.password</td>
                      <td></td>
                  </tr>
                  }
              </tbody>
          </table>
    }else{
        <p>
            No User exist.
        </p>
    }

</div>





