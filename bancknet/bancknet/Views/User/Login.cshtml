@model bancknet.Models.User

<div class="d-flex justify-content-center">
    <form method="post" asp-action="Login">
        <div class="d-flex justify-content-center p-2">
            <div class="form-group row">
                <h2 class="text-info pl-3">Login</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-20">
                <div class="form-group row no-gutters">
                    <div class="col-4 px-1">
                        <label asp-for="email"></label>
                    </div>
                    <div class="col-8 px-1">
                        <input asp-for="email" class="form-control" type="text" name="Email" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row no-gutters">
                    <div class="col-4 px-1">
                        <label asp-for="password"></label>
                    </div>
                    <div class="col-8 px-1">
                        <input asp-for="password" class="form-control" type="password" name="Password" />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-20 offset-5 row no-gutters">
                        <div class="col px-1">
                            <input type="submit" class="btn btn-info w-100" value="Login" />
                        </div>
                        <div class="col px-1">
                            <a asp-controller="Home" asp-action="index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt">Voltar</i></a>
                        </div>
                    </div>

                </div>
                <div class="row offset-3">
                    <a asp-controller="User" asp-action="Creat" style="color:slategray"> Não tenho registro</a>
                </div>
            </div>
        </div>
    </form>
</div>
